{
  "routes": [
    {
      "route": "/login",
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout?post_logout_redirect_uri=/"
    },
    {
      "route": "/api/checkAdmin",
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "https://maanit-func.azurewebsites.net/api/checkAdmin",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Content-Type": "application/json",
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/api/users",
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "https://maanit-func.azurewebsites.net/api/users",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "route": "/api/upload",
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "https://maanit-func.azurewebsites.net/api/upload",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "https://maanit-func.azurewebsites.net/api/{rest}"
    },
    {
      "route": "/users.html",
      "allowedRoles": ["admin"],
      "serve": "/users.html",
      "statusCode": 200,
      "headers": {
        "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://ajax.aspnetcdn.com; style-src 'self' 'unsafe-inline'; frame-ancestors 'self'",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "SAMEORIGIN",
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/admin.html",
      "allowedRoles": ["authenticated", "admin"],
      "serve": "/admin.html",
      "statusCode": 200,
      "headers": {
        "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; frame-ancestors 'self'",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "SAMEORIGIN",
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    },
    {
      "route": "/",
      "serve": "/index.html",
      "statusCode": 200,
      "headers": {
        "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; frame-ancestors 'self'",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "SAMEORIGIN",
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    }
  ],
  "auth": {
    "rolesSource": "/api/getRoles",
    "identityProviders": {
      "azureActiveDirectory": {
        "userDetailsClaim": "preferred_username",
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/6d69eb82-d631-4fb0-b1e8-6b4f85197024/v2.0",
          "clientIdSettingName": "AAD_CLIENT_ID",
          "clientSecretSettingName": "AAD_CLIENT_SECRET"
        },
        "login": {
          "loginParameters": ["response_type=code id_token"]
        }
      }
    }
  },
  "platform": {
    "apiRuntime": "node:16"
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/.auth/*",
      "/api/*",
      "*.css",
      "*.js",
      "*.png",
      "*.jpg",
      "*.svg"
    ]
  },
  "globalHeaders": {
    "Cache-Control": "no-cache, no-store, must-revalidate",
    "Pragma": "no-cache",
    "Expires": "0"
  },
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "403": {
      "rewrite": "/403.html",
      "statusCode": 403
    },
    "404": {
      "rewrite": "/404.html",
      "statusCode": 404
    }
  }
}