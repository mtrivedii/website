{
  "version": "1.0.0",
  "connectionStrings": {
    "myConnection": {
      "connectionString": "Server=tcp:maanit-server.database.windows.net,1433;Database=maanit-db;Authentication=Active Directory Managed Identity;",
      "type": "sqlserver"
    }
  },
  "entities": {
    "Scoreboard": {
      "source": "dbo.vw_Scoreboard",
      "primaryKey": "ScoreID",
      "permissions": [
        { "actions": ["read"], "role": "anonymous" }
      ]
    },
    "users": {
      "source": "dbo.users",
      "primaryKey": "id",
      "permissions": [
        { "actions": ["read"], "role": "authenticated" }
      ]
    }
  }
}