{
  "version": "1.0.0",
  "runtime": { "rest": { "route": "/data-api/rest" } },
  "entities": {
    "Scoreboard": {
      "source": "dbo.Scoreboard",
      "primaryKey": "ScoreID",
      "fields": {
        "ScoreID": { "type": "int" },
        "Username": { "type": "string" },
        "Score": { "type": "int" },
        "Timestamp": { "type": "datetime" }
      },
      "permissions": [
        { "actions": ["read"], "role": "anonymous" },
        { "actions": ["create"], "role": "authenticated" }
      ]
    },
    "Users": {
      "source": "dbo.users",
      "primaryKey": "id",
      "fields": {
        "id": { "type": "int" },
        "email": { "type": "string" },
        "role": { "type": "string" }
      },
      "permissions": [
        { "actions": ["read"], "role": "authenticated" }
      ]
    }
  }
}
